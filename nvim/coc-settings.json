{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescript-react",
    "typescript.tsx"
  ],
  "languageserver": {
    "crystal": {
      "command": "/home/alex/crystals/scry/bin/scry",
      "filetypes": ["crystal"],
      "rootPatterns": ["shard.yml", ".git"]
    },
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm-package.json"],
      "initializationOptions": {
        "elmPath": "elm", // optional
        "elmFormatPath": "elm-format", // optional
        "elmTestPath": "elm-test", // optional
        "elmAnalyseTrigger": "change" // optional
      }
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "ocamllsp": {
      "command": "ocamllsp",
      "filetypes": ["ocaml"]
    },
    "zls" : {
      "command": "zls",
      "filetypes": ["zig"]
    }
  },
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.home": "/usr/lib/jvm/java-8-openjdk-amd64",
  "java.import.bazel.enabled": true,
  "java.jdt.ls.vmargs": "-Dfile.encoding=UTF-8",
  "java.trace.server": "verbose",
  "python.jediEnabled": false,
  "rust-analyzer.checkOnSave.command": "clippy",
  "tsserver.formatOnType": true,
  "tsserver.log": "verbose",
  "tsserver.npm": "~/.asdf/shims/npm",
  "tsserver.trace.server": "verbose"
}
