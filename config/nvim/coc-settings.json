{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    },
    "crystal": {
      "command": "crystalline",
      "filetypes": ["crystal"],
      "rootPatterns": ["shard.yml", ".git"]
    },
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm-package.json"],
      "initializationOptions": {
        "elmPath": "elm", // optional
        "elmFormatPath": "elm-format", // optional
        "elmTestPath": "elm-test", // optional
        "elmAnalyseTrigger": "change" // optional
      }
    },
    "golang": {
      "command": "gopls",
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "java": {
      "command": "/home/alex/java-language-server/dist/lang_server_linux.sh",
      "filetypes": ["java"]
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "ocamllsp": {
      "command": "ocamllsp",
      "filetypes": ["ocaml"]
    },
    "zls" : {
      "command": "zls",
      "filetypes": ["zig"]
    }
  },
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.import.bazel.enabled": true,
  "java.jdt.ls.vmargs": "-Dfile.encoding=UTF-8",
  "java.trace.server": "verbose",
  "python.jediEnabled": false,
  "rust-analyzer.checkOnSave.command": "clippy",
  "tsserver.formatOnType": true,
  "tsserver.log": "verbose",
  "tsserver.trace.server": "verbose",
  "elixirLS.projectDir": ".",
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "elixir",
    "elm",
    "typescript",
    "typescript.react",
    "typescript.tsx",
    "javascript",
    "javascript.react",
    "jsx"
  ]
}
